{{!< default}}

{{>main-header}}

<div id="cf">
  <div class="cf-title">
    <h1> CHAPEL HILL COMMUNITY CHURCH </h1>
    <div class="container">
      <p>SUNDAY GATHERING</p>
      <p>10am</p>
      <p>2 Cate Road </p>
      <p>Rototuna </p>
    </div>
  </div>

  <img src="/assets/images/aaron-burden-651693-unsplash.jpg" />
  <img src="/assets/images/alex-blajan-487679-unsplash.jpg" />
  <img src="/assets/images/priscilla-du-preez-697316-unsplash.jpg" />
</div>

<div class="events">
  <h2>Next Events</h2>
  {{#get "posts" filter="tag:events" limit="3" as |event| }}
  <div class="event-wrapper">
    {{#foreach event}}
    <div class="event">
      <a class="link" href={{ url }}>
        <div class="title">{{title}}</div>
        <p>{{ excerpt words="15" }} </p>
      </a>
    </div>
    {{/foreach}}
  </div>
  {{/get}}
</div>

<div class="ministries">
  <h2>Ministries</h2>
  {{#get "pages" filter="tag:ministry" limit="3" as |ministry| }}
  <div class="ministry-wrapper">
    {{#foreach ministry}}
    <div class="ministry">
      <div class="img-wrapper">
        {{#if feature_image }}
        <img src="{{img_url feature_image size="card"}}">
        {{/if}}
      </div>
      <div class="title">{{title}}</div>
      <hr style="width:25%" />
      <p>{{ content words="15" }} </p>
    </div>
    {{/foreach}}
  </div>
  {{/get}}
</div>